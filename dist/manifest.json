{
    "manifest_version": 2,
    "author": "CS489-team2",

    "name": "RacismGuard",
    "description": "a Chrome Web Browser Extension that raises awareness about racism in SNS-Twitter",
    "version": "1.0.0",

    "browser_action": {
        "default_icon": {
            "16": "favicon-16x16.png",
            "32": "favicon-32x32.png",
            "48": "favicon-48x48.png",
            "128": "favicon-128x128.png"
        },    
        "default_popup": "popup.html"
    },

    "background": {
        "scripts": ["js/eventPage.js"],
        "persistent": false
    },

    "icons": {
        "16": "favicon-16x16.png",
        "32": "favicon-32x32.png",
        "48": "favicon-48x48.png",
        "128": "favicon-128x128.png"
    },

    "permissions": [
        "activeTab",
        "declarativeContent",
        "storage",
        "contextMenus",
        "notifications",
        "webNavigation",
        "tabs",
        "<all_urls>",
        "http://*/*",
        "https://*/*",
        "*://*.twitter.com/*",
        "http://127.0.0.1/*"
    ]
}
